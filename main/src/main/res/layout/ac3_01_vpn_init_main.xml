<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_button"
            style="@style/btn_topleft_back"/>
        <TextView
            style="@style/top_textview"
            android:text="VPN"/>
    </LinearLayout>
    <TextView
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/vpn_offline_background"
        style="@style/text_background"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="id"
        android:textColor="@color/ui_beige"
        android:textSize="30dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ui_beige"
        android:textSize="25sp"
        android:id="@+id/vpnid"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pw"
        android:textColor="@color/ui_beige"
        android:textSize="30dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ui_beige"
        android:textSize="25sp"
        android:id="@+id/vpnpw"/>
    <TextView
        android:id="@+id/btn_vpn_start"
        android:text="vpn 기능 활성화하기"
        style="@style/btn_bottom_main"/>
    <TextView
        android:id="@+id/btn_vpn_stop"
        android:text="vpn 기능 비활성화하기"
        style="@style/btn_bottom_main"
        android:textColor="@color/ui_beige"
        android:background="@drawable/btn_round_blue"/>
</LinearLayout>