<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ais_darkblue"
    android:padding="24dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ais_ic_back"
        android:tint="@color/ais_neongreenwhite"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@+id/space_left"
        app:layout_constraintTop_toTopOf="@+id/space_top" />

    <!-- Profile Title -->
    <TextView
        android:id="@+id/tv_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginTop="50dp"
        android:text="PROFILE"
        android:textColor="@color/ais_neongreenwhite"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/space_top" />

    <!-- Email Section -->
    <LinearLayout
        android:id="@+id/layout_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/ais_round_mint_edge"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="@id/space_right"
        app:layout_constraintStart_toStartOf="@id/space_left"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ais_ic_email"
                android:tint="@color/ais_mint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="email"
                android:textColor="@color/ais_mint"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="initValue"
            android:textColor="@color/ais_neongreenwhite"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Username Section -->
    <LinearLayout
        android:id="@+id/layout_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/ais_round_mint_edge"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="@id/space_right"
        app:layout_constraintStart_toStartOf="@id/space_left"
        app:layout_constraintTop_toBottomOf="@id/layout_email">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ais_ic_user"
                android:tint="@color/ais_mint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="username"
                android:textColor="@color/ais_mint"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="initValue"
            android:textColor="@color/ais_neongreenwhite"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Lock Method Section -->
    <LinearLayout
        android:id="@+id/layout_lock_method"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/ais_round_mint_edge"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="@id/space_right"
        app:layout_constraintStart_toStartOf="@id/space_left"
        app:layout_constraintTop_toBottomOf="@id/layout_username">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ais_ic_lock"
                android:tint="@color/ais_mint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="lock method"
                android:textColor="@color/ais_mint"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_lock_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="initValue"
            android:textColor="@color/ais_neongreenwhite"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- PIN 설정하기 Button -->
    <Button
        android:id="@+id/btn_set_pin"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ais_round_mint_full"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="PIN 설정하기"
        android:textColor="@color/ais_darkblue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_set_pattern"
        app:layout_constraintEnd_toEndOf="@id/space_right"
        app:layout_constraintStart_toStartOf="@id/space_left"/>

    <!-- PATTERN 설정하기 Button -->
    <Button
        android:id="@+id/btn_set_pattern"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/ais_round_mint_full"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="PATTERN 설정하기"
        android:textColor="@color/ais_darkblue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_logout"
        app:layout_constraintEnd_toEndOf="@id/space_right"
        app:layout_constraintStart_toStartOf="@id/space_left" />

    <!-- 로그아웃하기 Button -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ais_round_white_edge"
        android:fontFamily="@font/pretendard_bold"
        android:text="로그아웃하기"
        android:textColor="@color/ais_neongreenwhite"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/space_bottom"
        app:layout_constraintEnd_toEndOf="@id/space_right"
        app:layout_constraintStart_toStartOf="@id/space_left" />

    <!--    상하좌우 자간-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/space_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/space_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/space_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/space_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"/>

</androidx.constraintlayout.widget.ConstraintLayout>