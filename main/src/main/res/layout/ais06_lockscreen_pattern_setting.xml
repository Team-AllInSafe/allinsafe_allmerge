<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ais_darkblue">
    <!--    뒤로가기버튼-->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:background="@color/transparent"
        android:src="@drawable/ais_ic_back"
        app:layout_constraintStart_toStartOf="@+id/space_left"
        app:layout_constraintTop_toTopOf="@+id/space_top" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ais_round_mint_full"
        app:layout_constraintEnd_toStartOf="@+id/space_right"
        app:layout_constraintStart_toStartOf="@+id/space_left"
        app:layout_constraintTop_toBottomOf="@+id/btn_back">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ais_ic_lock_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="패턴 설정"
        android:textColor="@color/ais_neongreenwhite"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/space_right"
        app:layout_constraintStart_toStartOf="@+id/space_left"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <!--    상하좌우 마진-->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="점들을 연결하여 패턴을 입력해주세요"
        android:textColor="@color/ais_neongreenwhite"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/space_right"
        app:layout_constraintStart_toStartOf="@+id/space_left"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <de.blinkt.openvpn.ac0_patternpin.PatternLockView
        android:id="@+id/patternView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@drawable/ais_round_blue_full"
        android:elevation="4dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@+id/space_bottom"
        app:layout_constraintEnd_toStartOf="@+id/space_right"
        app:layout_constraintStart_toStartOf="@+id/space_left"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/space_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/space_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/space_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/space_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"/>
</androidx.constraintlayout.widget.ConstraintLayout>