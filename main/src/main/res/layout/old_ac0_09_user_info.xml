<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_button"
            style="@style/btn_topleft_back"/>
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유저 정보"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/ui_beige"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:alignmentMode="alignBounds"
        android:rowCount="3"
        android:columnCount="2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="email:"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/ui_beige"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="initemail"
            android:textSize="20sp"
            android:textColor="@color/ui_beige"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="username:"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/ui_beige"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="initusername"
            android:textSize="20sp"
            android:textColor="@color/ui_beige"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="잠금방식:"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/ui_beige"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_lockmethod"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="initlock"
            android:textSize="32sp"
            android:textColor="@color/ui_beige"
            android:gravity="center_vertical"/>

    </GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/btn_pin_set"
        android:text="pin 설정하기"
        android:textSize="25sp"
        style="@style/btn_bottom_finish"
        android:layout_marginLeft="60dp"

        android:layout_marginRight="60dp"/>
    <TextView
        android:id="@+id/btn_pattern_set"
        android:text="패턴 설정하기"
        android:textSize="25sp"
        style="@style/btn_bottom_finish"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"/>


</LinearLayout>