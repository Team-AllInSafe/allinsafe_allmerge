<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <!-- 관리자 권한 요청 버튼 -->
    <Button
        android:id="@+id/btn_request_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/request_admin" />

    <!-- 수동 잠금 버튼 -->
    <Button
        android:id="@+id/btn_lock_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lock_now"
        android:layout_marginTop="16dp" />

    <!-- 2차 인증 스위치 -->
    <Switch
        android:id="@+id/switch_2fa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/use_2fa"
        android:layout_marginTop="24dp" />

    <!-- PIN 설정 / 변경 버튼 -->
    <Button
        android:id="@+id/btn_set_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_or_change_pin"
        android:visibility="gone"
        android:layout_marginTop="16dp" />
</LinearLayout>
