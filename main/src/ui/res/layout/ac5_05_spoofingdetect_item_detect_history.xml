<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <TextView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:id="@+id/detect_date"
        android:text="2025.04.29 00:00"
        android:textSize="20sp"
        style="@style/text_beige_bold"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/arp_bg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/btn_round_green"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="ARP"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/background"
            android:gravity="center"/>
        <TextView
            android:id="@+id/arp_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="init"
            android:textSize="20dp"
            android:textColor="@color/background"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dns_bg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/btn_round_green"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="DNS"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/background"
            android:gravity="center"/>
        <TextView
            android:id="@+id/dns_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="init"
            android:textSize="20dp"
            android:textColor="@color/background"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>